{
    "manifest_version": 2,
    "name": "顏文字選擇器",
    "description": "方便的輸入顏文字:D",
    "version": "0.0.1",
    "icons": {
        "64": "icon.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["js/jquery-1.11.1.min.js", "js/background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "html/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/jquery-1.11.1.min.js", "js/content.js"]
        }
    ],
    "web_accessible_resources": ["json/default_kaomojies.json"]
}
